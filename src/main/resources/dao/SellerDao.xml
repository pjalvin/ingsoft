<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.PublicationDao">
    <insert id="create" parameterType="bo.ucb.edu.ingsoft.model.Seller">
        INSERT into seller VALUES
        (null,#{idPerson},#{idUser},1,#{imagePath},#{transaction.txDate},
        #{transaction.txIduser},#{transaction.txHost},#{transaction.txUpdate})
    </insert>
    <select id="findBySellerId" resultType="bo.ucb.edu.ingsoft.model.Seller">
        SELECT
               id_seller as idSeller,
               id_person as idPerson,
               id_user as idUser,
               status as status
        FROM seller
        WHERE
            contact_id = 2
    </select>
</mapper>
